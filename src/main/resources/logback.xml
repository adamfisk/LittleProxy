<configuration>
  <appender name="TextFile" class="ch.qos.logback.core.FileAppender">
    <Append>false</Append>
    <File>log.txt</File>
    <encoder>
      <pattern>%-6r %d{ISO8601} %-5p [%t] %c{2}.%M (%F:%L) - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="httpclient.wire" level="off"/>
  <logger name="org.apache.commons" level="off"/>
  <root level="warn">
    <appender-ref ref="TextFile"/>
  </root>
</configuration>